<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= image_tag '節約ごはん.png' %>
    </div>
  </div>
  <div class="row d-grid gap-2 col-6 mx-auto text-center">
    <div class="col-lg-12 btn mb-4", style="background-color: #F0908D;">
      <%= link_to new_user_registration_path do %>
        <i class="fa-solid fa-user-plus"> 新規登録</i>
      <% end %>
    </div>
    <div class="col-lg-12 btn mb-4", style="background-color: #F0908D;">
      <%= link_to new_user_session_path do %>
        <i class="fa-solid fa-right-to-bracket"> ログイン</i>
      <% end %>
    </div>
    <div class="col-lg-12 btn mb-4", style="background-color: #F0908D;">
      <%= link_to users_guest_sign_in_path, method: :post do %>
        <i class="fa-solid fa-eye"> ゲストログイン</i>
      <% end %>
    </div>
    <div class="col-lg-12">
      <%= link_to about_path do %>
        <i class="fa-solid fa-circle-question"> 節約ごはんの使い方</i>
      <% end %>
    </div>
  </div>
</div>