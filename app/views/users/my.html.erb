<div class="row d-flex justify-content-center mb-5">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image.variant(resize: "440x386^", gravity: :center, crop: "440x386+0+0").processed, class: "card-img-top object-fit-cover border rounded-circle m-1" %>
              <% else %>
                <%= image_tag "no_image.png", class: "card-img-top object-fit-cover border rounded-circle m-1" %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= current_user.name %></h5>
                <p class="card-text"><%= current_user.email %></p>
                <p class="card-text"><%= current_user.introduction %></p>
                <p class="card-text"><small class="text-muted"><%= current_user.created_at.to_s(:datetime_jp) %></small></p>
              </div>
            </div>
        </div>
    </div>
</div>

<div class="row links mb-5">
    <div class="col-md-8 offset-md-2">
      <%= link_to "< 戻る", recipes_path, class: "d-flex justify-content-center" %>
    </div>
</div>