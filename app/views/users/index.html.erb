<div class="row">
  <div class="col-10 offset-1">
    
    <div class="row d-flex justify-content-center mb-5">
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to recipes_path, style: "color:#fff;" do %>
          <i class="fa-solid fa-circle-plus"> レシピ一覧</i>
        <% end %>
      </div>
    </div>
    
    <div class="row d-flex justify-content-center">
      <% @users.each do |user| %>
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <% if user.image.attached? %>
                <%= image_tag user.image.variant(resize: "440x386^", gravity: :center, crop: "440x386+0+0").processed, class: "card-img-top object-fit-cover border rounded-circle m-1" %>
              <% else %>
                <%= image_tag "no_image.png", class: "card-img-top object-fit-cover border rounded-circle m-1" %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= user.name %></h5>
                <p class="card-text"><%= user.email %></p>
                <p class="card-text"><%= user.introduction %></p>
                <p class="card-text"><small class="text-muted"><%= user.created_at.to_s(:datetime_jp) %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="row links mb-5">
      <div class="col-md-8 offset-md-2">
        <%= link_to "< 戻る", recipes_path, class: "d-flex justify-content-center" %>
      </div>
    </div>
    
  </div>
</div>