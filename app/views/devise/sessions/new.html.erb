<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
    <%= form_with model: @user, url: newuser_session_path do |f| %>
    
      <h2 class="m-5 d-flex justify-content-center" style="color: #FFF;">
        <i class="fa-solid fa-right-to-bracket"> ログイン</i>
      </h2>
      
      <%= render 'layouts/error_messages', resource: f.object %>
    
      <div class="field mb-3">
        <%= f.text_field :name, placeholder: "名前", autofocus: true, autocomplete: "name", class: "form-control rounded-pill" %>
      </div>
      
      <div class="field mb-3">
        <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "e", class: "form-control rounded-pill" %>
      </div>

      <div class="field mb-5">
        <%= f.text_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-control rounded-pill" %>
      </div>

      <div class="row actions mb-5">
        <div class="col-md-8 offset-md-2">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block rounded-pill", style: "font-weight:bold;" %>
        </div>
      </div>
      <div class="d-flex justify-content-center mb-5">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>