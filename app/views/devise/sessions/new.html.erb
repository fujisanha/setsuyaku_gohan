<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
    
    <h2 class="m-5 d-flex justify-content-center" style="color: #FFF;">
      <i class="fa-solid fa-right-to-bracket"> ログイン</i>
    </h2>
    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field mb-3">
        <%= f.label :name, "名前", style: "color:#fff;" %><br />
        <%= f.text_field :name, placeholder: "name", autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field mb-5">
        <%= f.label :password, "パスワード", style: "color:#fff;" %><br />
        <%= f.text_field :password, placeholder: "password", autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="row actions mb-5">
        <div class="col-md-8 offset-md-2">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>