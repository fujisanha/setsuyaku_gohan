<% if resource.errors.any? %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div id="error_explanation" data-turbo-cache="false">
          <ul style="list-style: none; padding-left: 0; color: #ec6d71;">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
