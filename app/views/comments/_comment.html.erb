<!--吹き出しはじまり-->
<div class="balloon5">
  <div class="faceicon">
    <% if comment.user.image.attached? %>
      <%= image_tag comment.user.image %>
    <% else %>
      <%= image_tag "no_image.png" %>
    <% end %>
  </div>
  <div class="chatting">
    <div class="says">
      <%= comment.comment %></br>
      <small><%= comment.created_at.to_s(:datetime_jp) %></small>
    </div>
  </div>
</div>

<!--吹き出し終わり-->
<% if current_user == comment.user %>
  <%= link_to "このコメントを削除する", admin_comment_path(comment), class: "btn btn-danger btn-block mb-5", method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>