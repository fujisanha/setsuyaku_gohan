<div class="row">
  <div class="col-10 offset-1">
    
    <div class="row d-flex justify-content-center mb-5">
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to my_path, style: "color:#fff;" do %>
          <i class="fa-solid fa-user"> マイページ</i>
        <% end %>
      </div>
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to new_recipe_path, style: "color:#fff;" do %>
          <i class="fa-solid fa-circle-plus"> 投稿する</i>
        <% end %>
      </div>
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to users_path, style: "color:#fff;" do %>
          <i class="fa-solid fa-users"> ユーザー</i>
        <% end %>
      </div>
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to "#", style: "color:#fff;" do %>
          <i class="fa-solid fa-pencil"> 記録する</i>
        <% end %>
      </div>
      <div class="col-lg-2 btn rounded-pill top-guestlogin-btn m-1">
        <%= link_to destroy_user_session_path, method: :delete, style: "color:#fff;" do %>
          <i class="fa-solid fa-right-from-bracket"> ログアウト</i>
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-lg-4 mb-5">
          <%= link_to recipe_path(recipe) do %>
          
            <div class="card p-4 shadow-sm">
            
              <!--いいね機能の実装をしたがレイアウトが崩れる-->
              <div class="mb-3">
                <% if current_user.already_favorited?(recipe) %>
                  <%= link_to recipe_favorites_path(recipe), method: :delete do %>
                    <i class="fa-solid fa-star fa-2x"></i>
                    <% end %>
                <% else %>
                  <%= link_to recipe_favorites_path(recipe), method: :post do %>
                    <i class="fa-regular fa-star fa-2x"></i>
                  <% end %>
                <% end %>
                <%= recipe.favorites.count %>
              </div>
              
              <% if recipe.image.attached? %>
                <%= image_tag recipe.image.variant(resize: "440x386^", gravity: :center, crop: "440x386+0+0").processed, class: "card-img-top object-fit-cover border rounded" %>
              <% else %>
                <%= image_tag "no_image.png", class: "card-image-top object-fit-cover border rounded" %>
              <% end %>
              
              <div class="card-body">
                <h5 class="card-title"><%= recipe.title %></h5>
                <span><%= recipe.created_at.to_s(:datetime_jp) %></span>
              </div>
              
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
  </div>
</div>