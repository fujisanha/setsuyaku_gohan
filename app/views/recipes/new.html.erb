<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
    <%= form_with model: @recipe, method: :post do |f| %>
    <h2 class="my-5 d-flex justify-content-center" style="color: #fff;">
      節約ごはんの投稿
    </h2>
    
    <div class="field mb-3">
      <%= f.label :title, "メニュー名", style: "color:#FFF;" %>
      <%= f.text_field :title, placeholder: "menu", class: "form-control" %>
    </div>
    
    <div class="field">
      <%= f.label :body, "作り方の手順", style: "color:#fff;" %>
      <%= f.text_field :body, class: "form-control" %>
    </div>
    
    <!--ここから追記-->
    <%= form_with(model: @recipe, local: true) do |s| %>
    <%= s.label :body, "作り方の手順" %>
    <%= s.text_field :body %>
    <div class="recipes">
        <%= s.fields_for :details do |t| %>
            <%= render partial: "detail_fields", locals: { f: t } %>
        <% end %>
        <div class="links">
            <%= link_to_add_association "追加", s, :details %>
        </div>
    </div>
    <div class="actions">
        <%= s.submit %>
    </div>
    <!--ここまで-->
    
<% end %>
    
    <% end %>
  </div>
</div>