<div class="row mb-5">
  <div class="col-10 offset-1">
    <div class="row d-flex justify-content-center" >
      <ul>
        <% @comments.each do |comment| %>
          <%= render partial: "comments/comment", locals: { comment: comment } %>
          <%= link_to "このコメントを削除する", admin_comment_path(comment), class: "btn btn-danger btn-block mb-5", method: :delete, data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </ul>
    </div>
  </div>
</div>