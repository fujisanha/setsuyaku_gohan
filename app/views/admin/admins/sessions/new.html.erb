<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">

  <h2 class="m-5 d-flex justify-content-center" style="color: #FFF;">
    <i class="fa-solid fa-gear"> ログイン</i>
  </h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control rounded-pill" %>
  </div>

  <div class="field mb-5">
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-control rounded-pill" %>
  </div>

  <!--<#% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%#= f.check_box :remember_me %>-->
  <!--    <%#= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<%# end %>-->

  <div class="row actions mb-5">
    <div class="col-md-8 offset-md-2">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block rounded-pill", style: "font-weight:bold;" %>
    </div>
  </div>
<% end %>

